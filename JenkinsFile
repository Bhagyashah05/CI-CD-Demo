pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "bhagyashah05/springboot-helloworld"
        DOCKER_REGISTRY = "docker.io"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from GitHub repository
                git 'https://github.com/Bhagyashah05/CI-CD-Demo.git'
            }
        }
        stage('Build') {
            steps {
                // Build the application (assumes Maven)
                sh './mvnw clean package -DskipTests'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t $DOCKER_IMAGE ."
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh """
                            echo $DOCKER_PASSWORD | docker login --username $DOCKER_USERNAME --password-stdin
                            docker push $DOCKER_IMAGE
                        """
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Run Docker container (deploy the app)
                    sh "docker run -d -p 8090:8090 $DOCKER_IMAGE"
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
